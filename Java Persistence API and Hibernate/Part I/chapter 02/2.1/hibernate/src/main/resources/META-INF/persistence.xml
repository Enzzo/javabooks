<persistence xmlns="http://java.sun.com/xml/ns/persistence"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
				http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
				version="2.0">
				
	<persistence-unit name="HelloWorldPU">
		<description>
			Persistence unit for the "Hibernate In Action" javabook
		</description>
		
		<class>ru.vasilev.hibernate.model.Message</class
		
		<properties>
			<property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:hwdb;DB_CLOSE_DELAY=-1" />
			<property name="jakarta.persistence.jdbc.user" value="sa" />
			<property name="jakarta.persistence.jdbc.password" value="" />
			
			<property name="jakarta.persistence.schema-generation.database.action" value="create" />
			
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.formate_sql" value="true" />
			<property name="hibernate.highlight_sql" value="true" />
		</properties>
	</persistence-unit>